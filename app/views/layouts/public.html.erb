  $('body').on('keyup', '#chatroom_search', function(event) {
    $.ajax({
      url: '/chatrooms/chat_room_search',
      data: {search: $(this).val()},
    })
    .done(function(data) {
      $('.chatroom_pool').html(data);
    })    
  });

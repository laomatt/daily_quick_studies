<script>
  $('body').on('click', '.regen_rand_free', function(event) {
    event.preventDefault();

    $.ajax({
      url: '/slideshows/regen_rand',
    })
    .done(function(data) {
      console.log("success");
      $('.random_slide_shows').html(data)
    })

  });
</script>